generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Artist {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  name        String
  belongsToId String
  createdBy   User     @relation(fields: [belongsToId], references: [id])

  @@unique([id, belongsToId])
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  email     String   @unique
  username  String?
  password  String
  artists   Artist[]
}
