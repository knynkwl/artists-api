{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "sourceMap": true,
    "outDir": "dist",
    "types": [
      "node",
      "jest",
      "express",
      "@types"
    ],
    "paths": {
      "@/src/*": ["./src/*"],
      "@/types/*": ["./types/*"],
    }
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
	"exclude": ["node_modules"]
}
